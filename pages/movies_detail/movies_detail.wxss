.container .top_group{
  display: flex;
  background-color: #fbf7f4;
  padding: 40rpx;
  box-sizing: border-box;
  align-items: center;
}
.container .top_group .top-group-image{
  flex: 1;
  width: 260rpx;
  height: 300rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  margin-right: 40rpx;
}
.container .top_group  .info-group{
  flex: 2;
  display: flex;
  flex-direction: column;
}
.container .top_group  .info-group .info-group-title{
  color: #171813;
  font-size: 50rpx;
  font-weight: bold;
}
.container .top_group  .info-group .info-group-title-english{
  color: #ccc;
  font-size: 28rpx;
}
.container .top_group  .info-group .info-group-movieInfo{
  margin-top: 32rpx;
  color: #ccc;
  font-size: 28rpx;
margin-bottom: 40rpx;

}
.container .top_group  .info-group .button-group{
 display: flex;
 justify-content: space-around;
}
.container .top_group  .info-group .button-group .btn{
 /* flex: 1; */
 width: 45%;
 /* height: 60rpx; */
 padding: 0;
 background-color: #ffffff;
 line-height: 80rpx;
 box-sizing: border-box;
 font-size: 30rpx;
 box-shadow: 0 5rpx 3rpx #ccc;
 border-radius: 5rpx;
}


