.search-list{
  padding: 20rpx 20rpx;
}
.search-list .search-item{
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
}
.search-list .search-item .item-image{
  width: 100rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
.search-list .search-item .item-info{
flex: 1;
display: flex;
flex-direction: column;
justify-content: space-between;
}
.search-list .search-item .item-info .info-title{
flex: 1;
font-size: 32rpx;
display: flex;
}
.search-list .search-item .item-info .info-title>text{
margin-right: 20rpx;
}
.search-list .search-item .item-info .info-pubdata{
flex: 1;
font-size: 28rpx;
color: #ccc;
}

.search-list .search-item .item-info .info-subtitle{
flex: 1;
font-size: 28rpx;
color: #ccc;
}

.history-list{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.history-list .list-top{
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.history-list .list-top .top-left{
  font-size: 28rpx;
  color: #595959;
}
.history-list .list-top .top-right{
  font-size: 28rpx;
  color: #ccc;
}
.history-list .list-item{
  font-size: 32rpx;
  margin: 10rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
  width: 100%;
}
